const content = [
  {
    title: 'Instagram',
    link: 'https://www.instagram.com/taqueriaameca/',
  },
  {
    title: 'Facebook',
    link: 'https://www.facebook.com/profile.php?id=100073312594879&ref=_ig_profile_ac',
  },
  {
    title: 'Tiktok',
    link: '#',
  },
  {
    title: 'Website',
    link: '/',
  },
  {
    title: 'Our menu',
    link: '/en/menu',
  },
