    <!-- Barra de progreso -->

    <!-- Botón siguiente -->
    <button
      class="hero-carousel-next hero-carousel-prev border border-accent-3 text-accent-3 py-2 px-4 rounded-xl transition-all duration-200"
      aria-label="Next slide"
    >
      <svg
        class="w-5 h-5"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
