---
import { Icon } from "astro-icon/components";

const icons = [
  {
    icon: 'facebook',
    href: 'https://www.facebook.com/profile.php?id=100073312594879&ref=_ig_profile_ac',
  },
  {
    icon: 'instagram',
    href: 'https://www.instagram.com/taqueriaameca/',
  },
  {
    icon: 'youtube',
    href: '#',
  },
  {
    icon: 'tiktok',
    href: '#',
  },
];
---
<div class="flex flex-col justify-center items-center gap-[15px] fixed z-100 top-[50%] right-3.5 md:right-7 transform -translate-y-1/2">
  {icons.map((item)=>(
    <a class="w-10 md:w-12 h-10 md:h-12 bg-accent-2 rounded-full flex justify-center items-center cursor-pointer hover:bg-accent-1 transition-all duration-200 ease-in-out" href={item.href} target="_blank" rel="noopener noreferrer">
      <Icon name={item.icon} class={'w-5 h-5'}/>
    </a>
  ))}
</div>