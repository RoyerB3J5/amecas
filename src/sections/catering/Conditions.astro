---
type Translations = typeof import('../../i18n/es').default;
type NotesContent = Translations['catering']['notes'];
interface Props {
  content: NotesContent;
}
const { content } = Astro.props as Props;
---
<section class="flex flex-col justify-center items-center gap-[21px] mb-[63px] px-6 md:px-0 " data-aos="flip-down" data-aos-offset="200">
  <h4 class="text-[24px] font-semibold leading-[140%] uppercase text-accent-5">{content.title}</h4>
  <p set:html={content.description} class="text-[16px] font-light leading-[140%] text-center"></p>
</section>